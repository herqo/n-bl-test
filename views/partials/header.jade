          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/about") About
            li.nav-item
              a.nav-link(href="/post") Sample Post
            li.nav-item
              a.nav-link(href="/contact") Contact
            li.nav-item
              a.nav-link(href="/resume") Resume
            
            if !currentUser 
              li.nav-item 
                a.nav-link(href="/admin/login") Sign In
            else 
              li.nav-item
                a.nav-link(href="#")= currentUser.username
              li.nav-item
                a.nav-link(href="/admin/logout") Cikis Yap
